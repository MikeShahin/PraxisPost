<div class="showpost">
<h1><%= @user.name %>'s profile</h1>
<br>
<% if admin %>
    <p>This is the site admin</p>
<% end %>

<% if session[:user_id] == @user.id %>
    <%= link_to 'Edit Info', edit_user_path(@user) %>
    <br>
    <br>
<% end %>

<h3>All posts by <%= @user.name %>:</h3>
</div>

<% if @posts.empty? %>
    <div class="showpost">
        <p>User has no posts</p>
    </div>
<% else %>
<ol>
    <% @posts.each do |p| %>
    <div class="post">
        <li>
        <% if p.url != "" %>
            <h5><%= link_to p.title, p.url %></h5>
        <% else %>
            <h5><%= link_to p.title, post_path(p) %></h5>
        <% end %>
        <div class="postinfo">
           <p> Created on <%= p.created_at.strftime("%B %d, %l:%M%P") %> posted in <%= link_to p.community.category, community_posts_path(p.community) %>

            <% if p.comments.count == 1 %>
                <%= link_to "#{p.comments.count} comment", post_path(p) %>
            <% else %>
                <%= link_to "#{p.comments.count} comments", post_path(p) %>
            <% end %>
        </li></div></p>

    </div>
    <% end %>
<% end %>
    <br>
    <br>
    </ol>
