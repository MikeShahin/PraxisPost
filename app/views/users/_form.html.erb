<div class="form">
<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
        <div class="error">
            <p>Hold up:</p>
            <ul>
                <% @user.errors.full_messages.each do |m| %>
                    <li><%= m %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

        <%= f.label "Username" %>
        <%= f.text_field :name %>
        <br>
        <%= f.label :email %>
        <%= f.email_field :email %>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <br>
        <%= f.submit %>
<% end %>
</div>