<h2><a href="<%=@post.url%>"><%= @post.title %></a></h2>
<h4>by: <%= link_to @post.user.name, user_path(@post.user) %></h4>
<h4>Description:</h4>
<p><%=@post.description%></p>
<% if session[:user_id] == @post.user_id || @user.admin %>
    <%= link_to 'Edit Post', edit_post_path(@post) %>
    <%= link_to 'Delete Post', @post, method: :delete, data: {confirm: "Are you sure? No take backsies!"} %>
<% end %>
<%= link_to 'Back to all posts', root_path %> 

<h4>Comments</h4>

<%= render "comment_form" %>

<% if @comments.count != 0 %>
    <ol>
    <% @comments.each do |c| %>
        <li><%= c.user.name %> replied: <%= c.reply %></li>
    <% end %>
    </ol>
<% else %>
    <p>No comments yet</p>
<% end %>

