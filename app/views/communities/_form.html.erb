<div class="form">
    <%= form_for @community do |f| %>
        <% if @community.errors.any? %>
            <div class="error">
                <p>Hold up:</p>
                <ul>
                    <% @community.errors.full_messages.each do |m| %>
                        <li><%= m %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        
        <%= f.label :category %>
        <%= f.text_field :category %>
        <br>
        <br>
        <%= f.label :info %>
        <%= f.text_area :info %>
        <br>
        <br>
        <br>
        <br>
        <%= f.submit('Create!') %>
        
    <% end %>
</div>