<h1>Welcome to <%= @community.category %></h1>

<div class="community_info">
    <h3><%= @community.info %></h3>
</div>
  <% if @user %>
      <%=link_to 'New Post', new_post_path %>
      <%=link_to 'User Page', user_path(@user) %>
      <%=link_to 'Log Out', logout_path %>
  <% else %>
      <%= link_to 'Log In', signin_path %>
      <%= link_to 'Sign Up', new_user_path %>
  <% end %>
  <%= link_to 'Back home', root_path %>  

  new_community_post_path
<ol>
    <% @posts.each do |p| %>
    <div class="post">
        <li>
        <% if p.url != "" %>
            <h3><%= link_to p.title, p.url %></h3>
        <% else %>
            <h3><%= link_to p.title, post_path(p) %></h3>
        <% end %>
        <div class="postinfo">
            by <%= link_to p.user.name, user_path(p.user) %> on <%= p.created_at.strftime("%B %d, %l:%M%P") %> posted in <%= link_to p.community.category, community_path(p.community) %>

            <% if p.comments.count == 1 %>
                <%= link_to "#{p.comments.count} comment", post_path(p) %></li>
            <% else %>
                <%= link_to "#{p.comments.count} comments", post_path(p) %></li>
            <% end %>
        </div>

    </div>
    <% end %>
    <br>
    <br>
</ol>